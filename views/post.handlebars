{{#if loggedIn}}
  <section class="post">

    <section class="card">
      <header>{{post.title}}
        By:
        {{post.User.username}}
        Date Created:
        {{format_date post.createdAt}}</header>
      <p>{{post.content}}</p>
    </section>
    <section id="enteredComment">
      {{#each comments as |comment|}}
{{> comments}}
{{/each}}
    </section>
    <form>
      <p>Comment</p>
      <textarea
        name="commentText"
        id="commentText"
        cols="30"
        rows="10"
      ></textarea>
      <button data-postId="{{post.id}}" id="postBtn">Submit</button>
    </form>
  </section>
  <script src="/js/comment.js"></script>
{{else}}
  <a href="/login">You must login first to view this page</a>
{{/if}}