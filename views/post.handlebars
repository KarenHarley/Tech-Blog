{{#if loggedIn}}
  <section class="post">

    <section class="card">
      <header>{{posts.title}}
        By:
        {{user.username}}
        Date Created: 
        {{format_date posts.createdAt}}</header>
      <p>{{posts.content}}</p>
    </section>
    <section id="enteredComment">
      <!--
      <h2>{{comment.content}} </h2>
      <h2>{{comment.author}} </h2>
      -->
    </section>
    <form>
      <p>Comment</p>
      <textarea
        name="commentText"
        id="commentText"
        cols="30"
        rows="10"
      ></textarea>
     <button data-postId= "{{posts.id}}"  id = "postBtn">Submit</button>
    </form>
  </section>
  <script src="/js/comment.js"></script>
{{else}}
  <a href="/login">You must login first to view this page</a>
{{/if}}